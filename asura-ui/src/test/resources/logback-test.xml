<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date %-5level %logger{15} - %message%n</pattern>
    </encoder>
  </appender>
  <logger name="karate" level="INFO"/>
  <logger name="com.intuit.karate.driver" level="INFO"/>
  <logger name="com.jayway.jsonpath" level="INFO"/>
  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
